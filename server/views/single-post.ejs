<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <%- include('partials/styles.ejs') %>
    <%- include('partials/favicon.ejs') %>
</head>
<body>
     <!-- ##### Header Area Start ##### -->
     <header class="header-area">
            <div class="top-header-area">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                                <div class="top-header-content d-flex align-items-center justify-content-between">
                             <%- include("partials/header.ejs") %>
                              
                             <div class="login-search-area d-flex align-items-center">
                                    <div class="login d-flex">
                                            <%- include("partials/login.ejs") %>
                                            <%- include("partials/register.ejs") %>
                                    </div>
    
                                    <div class="search-form">
                                            <%- include("partials/search.ejs") %>
                                    </div>
                             </div>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
           
            <%- include("partials/nav.ejs") %>
        </header>

            
        <div class="hero-area">  
                <div class="container">
               <div class="row align-items-center">
                   <div class="col-12 col-lg-8">
   
                           <%- include("partials/breaking-news.ejs") %>
                           <%- include("partials/international-news.ejs") %>
                      
                        </div>
   
                        <div class="col-12 col-lg-4">
                             <%- include("partials/summer-trip-buy-now.ejs") %>
                        </div>
               </div>
              </div>
               </div>
               
         

            <div class="blog-area section-padding-0-80">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="blog-posts-area">
            
                                    <!-- Single Featured Post -->
                                    <%- include('partials/single-post-featured-post.ejs') %>
            
                                      <%- include('partials/single-post-related.ejs') %>
            
                                    <!-- Comment Area Start -->
                                    <div class="comment_area clearfix">
                                      <%- include('partials/single-post-comments.ejs') %>
                                    </div>
            
                                    <div class="post-a-comment-area section-padding-80-0">
                                        <h4>Leave a comment</h4>
                                        
                                       <%- include('partials/single-post-contact-form.ejs') %>
                                        </div>
                                    </div>
                                </div>
                            </div>
            
                            <div class="col-12 col-lg-4">
                                <div class="blog-sidebar-area">
            
                                    
                                    <div class="latest-posts-widget mb-50">
            
                                      <%- include('partials/categories-small-featured-post.ejs') %>
                                    </div>
            





                                      <!-- Popular News Widget -->
                                  
                                            <%- include('partials/most-popular-news.ejs') %>
                                     <!--end of Popular News Widget -->
            





                                    <!-- Newsletter Widget -->
                                    <%- include('partials/newsletter-form.ejs') %>
            
                                  
                                    <%- include('partials/single-post-latest-comment-widget.ejs') %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>










    <%- include("partials/footer.ejs")%>
    <%- include("partials/js.ejs")%>
</body>
</html>