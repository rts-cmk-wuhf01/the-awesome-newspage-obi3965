<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <%- include('partials/styles.ejs') %>
    <%- include('partials/favicon.ejs') %>
</head>
<body>
      <!-- ##### Header Area Start ##### -->
    <header class="header-area">
            <div class="top-header-area">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                                <div class="top-header-content d-flex align-items-center justify-content-between">
                             <%- include("partials/header.ejs") %>
                              
                             <div class="login-search-area d-flex align-items-center">
                                    <div class="login d-flex">
                                            <%- include("partials/login.ejs") %>
                                            <%- include("partials/register.ejs") %>
                                    </div>
    
                                    <div class="search-form">
                                            <%- include("partials/search.ejs") %>
                                    </div>
                             </div>
                            </div>
                            </div>
                    </div>
                </div>
            </div>
           
            <%- include("partials/nav.ejs") %>
        </header>

            <div class="hero-area">  
             <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-8">

                        <%- include("partials/breaking-news.ejs") %>
                        <%- include("partials/international-news.ejs") %>
                   
                     </div>

                     <div class="col-12 col-lg-4">
                          <%- include("partials/summer-trip-buy-now.ejs") %>
                     </div>
            </div>
           </div>
            </div>
                

          
                    
                  
                    
               
                  
           
            <div class="blog-area section-padding-0-80">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                           
                            <%- include('partials/categories-blog-post-area.ejs') %>
        
                            <nav aria-label="Page navigation example">
                                <%- include('partials/categories-pagination.ejs') %>
                            </nav>
                        </div>
        
                        <div class="col-12 col-lg-4">
                            <div class="blog-sidebar-area">
        
                                <!-- Latest Posts Widget -->
                                <div class="latest-posts-widget mb-50">
        
                                        <%- include('partials/categories-small-featured-post.ejs') %>
                                </div>
        





                                <!-- Popular News Widget -->
                                
                                <%- include('partials/most-popular-news.ejs') %>
                                
                                    <!--end of Popular News Widget -->





                                <!-- Newsletter Widget -->
                                <%- include('partials/newsletter-form.ejs') %>
        
                                <!-- Latest Comments Widget -->
                                <div class="latest-comments-widget">
                                    <h3>Latest Comments</h3>

                                  <% if(typeof latestCommentsList != 'undefined'){ %>
                                    <% latestCommentsList.forEach(commentsList =>{ %> 
                                    <% let commentDate = new Date(commentsList.date); %>
                                    
                                    
                                    <!-- Single Comments -->
                                    <div class="single-comments d-flex">
                                            
                                        <div class="comments-thumbnail mr-15">
                                            <img src="<%= commentsList.image %>" alt="">
                                        </div>
                                        <div class="comments-text">
                                            <a href="#"><%= commentsList.name %><span><br>On</span> <%= commentsList.text %> </a>
                                            <p><%= dateAndTime.format(commentDate, 'hh:mm A, MMMM DD, YYYY'); %></p>
                                        </div>
                                    </div>
                                    
                                 <% }) %>
                                <% } %>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>







    <%- include("partials/footer.ejs")%>
    <%- include("partials/js.ejs")%>
</body>
</html>